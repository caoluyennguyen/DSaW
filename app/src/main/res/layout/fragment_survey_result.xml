<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.surveys.AdminSurveyListFragment"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/survey_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khai báo y tế - Câu trả lời"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/survey_spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            style="@style/SpinnerTheme"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />

        <Spinner
            android:id="@+id/survey_spinner_district"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            style="@style/SpinnerTheme"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />

        <Spinner
            android:id="@+id/survey_spinner_ward"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            style="@style/SpinnerTheme"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />

        <ListView
            android:id="@+id/survey_result_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"/>
    </LinearLayout>
</LinearLayout>