<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo bài viết"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="20dp"/>

    <ImageButton
        android:id="@+id/btn_upload_cover"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:src="@drawable/upload_cover_btn" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:text="Tiêu đề bài viết"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề ngắn gọn, đầy đủ ý"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Nội dung bài viết"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Nhập nội dung bài viết ở đây"
            android:gravity="start"
            android:textSize="12dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_post"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tạo"
        android:textColor="#FFFFFF"/>


</LinearLayout>