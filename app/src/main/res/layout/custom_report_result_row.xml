<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_report_result_background">

    <TextView
        android:id="@+id/report_date_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày trả lời"
        android:textColor="#CBCFA6"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:id="@+id/report_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người báo cáo"
        android:textColor="#473636"
        android:textStyle="italic"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/report_result_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu trả lời 1:"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/report_result_frame_subitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    
    <ImageView
        android:id="@+id/report_result_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="15dp"
        android:scaleType="centerCrop"/>

</LinearLayout>